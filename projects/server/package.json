{
  "name": "tsh-server",
  "version": "1.0.1",
  "description": "Toolshed Next.js server for web UI and API",
  "private": true,
  "scripts": {
    "build:dev": "next build",
    "build:prod": "esbuild server.ts --bundle --platform=node --target=node20 --outfile=dist/server.js --external:next --external:fdir --external:http-status-codes --external:jsonc-parser --external:jsonwebtoken --external:loglevel --external:react --external:react-dom --external:recharts --external:sqlite --external:sqlite3 --external:swagger-ui-react --external:tailwindcss --external:winston --external:winston-daily-rotate-file --external:ws --external:yaml --main-fields=module,main --resolve-extensions=.js,.ts,.json",
    "start:prod": "node dist/server.js",
    "start:dev": "npm run build:dev && npx tsx server.ts -- --port 3000",
    "migrate": "tsx lib/models/sqlite/runMigration.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "load-sample-data": "tsx scripts/load-sample-data/load.ts",
    "clean": "tsx scripts/clean.ts"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/loglevel": "^1.5.4",
    "@types/sqlite3": "^3.1.11",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.20.0"
  },
  "devDependencies": {
    "@octokit/rest": "^22.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.54",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/swagger-ui-react": "^5.18.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "json5": "^2.2.3",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
